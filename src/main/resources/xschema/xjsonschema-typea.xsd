<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	version="1.1" elementFormDefault="qualified"
	xmlns:tns="https://www.json.org/typea" targetNamespace="https://www.json.org/typea">
	<xs:annotation>
		<xs:documentation>シンプルさを目指したスキーマの基盤</xs:documentation>
	</xs:annotation>
	<xs:simpleType name="data.type">
		<xs:restriction base="xs:string">
			<xs:enumeration value="boolean" />
			<xs:enumeration value="integer" />
			<xs:enumeration value="number" />
			<xs:enumeration value="string" />
			<xs:enumeration value="array" />
			<xs:enumeration value="object" />
		</xs:restriction>
	</xs:simpleType>
	<xs:attributeGroup name="common.attr">
		<xs:attribute name="name" type="xs:string" use="required" />
		<xs:attribute name="required" type="xs:boolean"
			default="false" />
		<xs:attribute name="nullable" type="xs:boolean"
			default="false" />
	</xs:attributeGroup>
	<xs:group name="type.ref.group">
		<xs:choice>
			<xs:element name="ref" type="xs:IDREF"></xs:element>
			<xs:element name="base" type="tns:data.type"></xs:element>
		</xs:choice>
	</xs:group>
	<xs:group name="object.group">
		<xs:choice>
			<xs:element name="boolean">
				<xs:complexType>
					<xs:attribute name="default" type="xs:boolean" />
					<xs:attributeGroup ref="tns:common.attr" />
				</xs:complexType>
			</xs:element>
			<xs:element name="string">
				<xs:complexType>
					<xs:attribute name="default" type="xs:string" />
					<xs:attributeGroup ref="tns:common.attr" />
				</xs:complexType>
			</xs:element>
			<xs:element name="integer">
				<xs:complexType>
					<xs:attribute name="default" type="xs:integer" />
					<xs:attributeGroup ref="tns:common.attr" />
				</xs:complexType>
			</xs:element>
			<xs:element name="number">
				<xs:complexType>
					<xs:attribute name="default" type="xs:float" />
					<xs:attributeGroup ref="tns:common.attr" />
				</xs:complexType>
			</xs:element>
			<xs:element name="array">
				<xs:complexType>
					<xs:group ref="tns:type.ref.group" minOccurs="0"/>
					<xs:attributeGroup ref="tns:common.attr" />
				</xs:complexType>
			</xs:element>
			<xs:element name="object">
				<xs:complexType>
					<xs:choice minOccurs="0" maxOccurs="unbounded">
						<xs:group ref="tns:object.group" />
					</xs:choice>
					<xs:attributeGroup ref="tns:common.attr" />
				</xs:complexType>
				<xs:unique name="object.restriction">
					<xs:selector xpath="tns:*" />
					<xs:field xpath="@name" />
				</xs:unique>
			</xs:element>
			<xs:element name="typed-object">
				<xs:complexType>
					<xs:group ref="tns:type.ref.group" minOccurs="0"/>
					<xs:attributeGroup ref="tns:common.attr" />
				</xs:complexType>
			</xs:element>
		</xs:choice>
	</xs:group>
	<xs:element name="json-schema">
		<xs:complexType>
			<xs:choice minOccurs="0" maxOccurs="unbounded">
				<xs:group ref="tns:object.group" />
				<xs:element name="def">
					<xs:complexType>
						<xs:choice minOccurs="0" maxOccurs="unbounded">
							<xs:group ref="tns:object.group" />
						</xs:choice>
						<xs:attribute name="id" type="xs:ID"></xs:attribute>
					</xs:complexType>
					<xs:unique name="def.restriction">
						<xs:selector xpath="tns:*" />
						<xs:field xpath="@name" />
					</xs:unique>
				</xs:element>
			</xs:choice>
			<xs:attribute name="name" />
		</xs:complexType>
		<xs:unique name="json-schema.restriction">
			<xs:selector xpath="tns:*" />
			<xs:field xpath="@name" />
		</xs:unique>
	</xs:element>
</xs:schema>
